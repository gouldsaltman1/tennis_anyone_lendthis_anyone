<div class="page-header">
  <h1>
    Equipment
    <a href="/equipment/new" class="btn btn-lg btn-success">New Equipment</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "equipment_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :user_id, "User" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :user_id_gteq, :class => "form-control", :placeholder => "User greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :user_id_lteq, :class => "form-control", :placeholder => "User less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :time_available_end, "Time available end" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='time_available_endgteqPicker'>
                  <%= f.text_field :time_available_end_gteq, :class => "form-control", :placeholder => "Time available end greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='time_available_endlteqPicker'>
                  <%= f.text_field :time_available_end_lteq, :class => "form-control", :placeholder => "Time available end less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#time_available_endgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#time_available_endlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#time_available_endgteqPicker').on("dp.change", function (e) {
                  $('#time_available_endlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#time_available_endlteqPicker').on("dp.change", function (e) {
                  $('#time_available_endgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :time_available_start, "Time available start" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='time_available_startgteqPicker'>
                  <%= f.text_field :time_available_start_gteq, :class => "form-control", :placeholder => "Time available start greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='time_available_startlteqPicker'>
                  <%= f.text_field :time_available_start_lteq, :class => "form-control", :placeholder => "Time available start less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#time_available_startgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#time_available_startlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#time_available_startgteqPicker').on("dp.change", function (e) {
                  $('#time_available_startlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#time_available_startlteqPicker').on("dp.change", function (e) {
                  $('#time_available_startgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :price_cont, "Price contains" %>
    <%= f.text_field :price_cont, :class => "form-control", :placeholder => "Price contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :equipment_category_category_name_cont, "EquipmentCategory category_name contains" %>
      <%= f.text_field :equipment_category_category_name_cont, :class => "form-control", :placeholder => "EquipmentCategory category_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/equipment" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#equipment_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Lender</th>
        <th>Price</th>
        <th>Image</th>
        <th>Time available start</th>
        <th>Time available end</th>
        <th>Equipment category</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.user_id %></td>
        <td>
          <% if equipment.lender.present? %>
            <a href="/lenders/<%= equipment.lender.id %>">
              <%= equipment.lender.id %>
            </a>
          <% end %>
        </td>
        <td><%= equipment.price %></td>
        <td><img src='<%= equipment.image %>' class='img-responsive'></td>
        <td><%= equipment.time_available_start %></td>
        <td><%= equipment.time_available_end %></td>
        <td>
          <% if equipment.equipment_category.present? %>
            <a href="/equipment_categories/<%= equipment.equipment_category.id %>">
              <%= equipment.equipment_category.category_name %>
            </a>
          <% end %>
        </td>
        <td><%= equipment.name %></td>
        <td>
          <a href="/equipment/<%= equipment.id %>" class="btn btn-primary">Show</a>
          <a href="/equipment/<%= equipment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_equipment/<%= equipment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @equipment, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
