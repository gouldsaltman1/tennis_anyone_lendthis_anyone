<!-- Validation failure messages -->
<% if @equipment.errors.any? %>
  <% @equipment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Equipment #<%= @equipment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_equipment/<%= @equipment.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @equipment.user_id %>">
      </div>

      <!-- Label and input for lender_id -->
      <div class="form-group">
        <label for="lender_id" class="control-label">
          Lender
        </label>

        <%= select_tag(:lender_id, options_from_collection_for_select(Lender.all, :id, :id, @equipment.lender_id), :class => "form-control") %>
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @equipment.price %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <%= cl_image_tag(@equipment.image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for time_available_start -->
      <div class="form-group">
        <label for="time_available_start" class="control-label">
          Time available start
        </label>

        <input type="text" id="time_available_start" name="time_available_start" placeholder="Time available start" class="form-control" value="<%= @equipment.time_available_start %>">
      </div>

      <!-- Label and input for time_available_end -->
      <div class="form-group">
        <label for="time_available_end" class="control-label">
          Time available end
        </label>

        <input type="text" id="time_available_end" name="time_available_end" placeholder="Time available end" class="form-control" value="<%= @equipment.time_available_end %>">
      </div>

      <!-- Label and input for equipment_category_id -->
      <div class="form-group">
        <label for="equipment_category_id" class="control-label">
          Equipment category
        </label>

        <%= select_tag(:equipment_category_id, options_from_collection_for_select(EquipmentCategory.all, :id, :category_name, @equipment.equipment_category_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @equipment.name %>">
      </div>

      <button class="btn btn-warning">
        Update Equipment
      </button>
      or
      <a href="/equipment/<%= @equipment.id %>">Cancel</a>
    </form>
  </div>
</div>
