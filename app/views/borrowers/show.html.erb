<div class="page-header">
  <h3>Borrower #<%= @borrower.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @borrower.user.present? %>
          <a href="/users/<%= @borrower.user_id %>">
            <%= @borrower.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Borrowing address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/borrowers" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @borrower.user %>
        <a href="/borrowers/<%= @borrower.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_borrower/<%= @borrower.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Borrower has many loans -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Loans
      </li>

      <% @borrower.loans.each do |loan| %>
        <li class="list-group-item">
          <a href="/loans/<%= loan.id %>">
            <%= loan.borrow_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/loans/<%= loan.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/loans/<%= loan.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_loan/<%= loan.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_loan" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for borrow_id -->
      <div class="form-group">
        <label for="borrow_id" class="control-label">
          Borrow
        </label>

        <%= select_tag(:borrow_id, options_from_collection_for_select(Borrower.all, :id, :created_at), :class => "form-control") %>
      </div>

      <!-- Label and input for lender_id -->
      <div class="form-group">
        <label for="lender_id" class="control-label">
          Lender
        </label>

        <input type="text" id="lender_id" name="lender_id" placeholder="Lender" class="form-control" value="">
      </div>

      <!-- Label and input for borrower_lender_equipment -->
      <div class="form-group">
        <label for="borrower_lender_equipment" class="control-label">
          Borrower lender equipment
        </label>

        <input type="text" id="borrower_lender_equipment" name="borrower_lender_equipment" placeholder="Borrower lender equipment" class="form-control" value="">
      </div>

      <!-- Label and input for equipment_id -->
      <div class="form-group">
        <label for="equipment_id" class="control-label">
          Equipment
        </label>

        <%= select_tag(:equipment_id, options_from_collection_for_select(Equipment.all, :id, :user_id), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Loan
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

