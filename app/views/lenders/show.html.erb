<div class="page-header">
  <h3>Lender #<%= @lender.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>First name</dt>
      <dd><%= @lender.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @lender.last_name %></dd>

      <dt>Email</dt>
      <dd><%= @lender.email %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/lenders" class="btn btn-primary">
        Back
      </a>
      <a href="/lenders/<%= @lender.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_lender/<%= @lender.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Lender has many lender_comments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Lender Comments
      </li>

      <% @lender.lender_comments.each do |lender_comment| %>
        <li class="list-group-item">
          <a href="/lender_comments/<%= lender_comment.id %>">
            <%= lender_comment.lender_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/lender_comments/<%= lender_comment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/lender_comments/<%= lender_comment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_lender_comment/<%= lender_comment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_lender_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for lender_id -->
      <input type="hidden" name="lender_id" value="<%= @lender.id %>">

      <!-- Label and input for borrower_id -->
      <input type="hidden" name="borrower_id" value="<%= current_borrower.id %>">

      <button class="btn btn-block btn-success">
        Create Lender Comment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Lender has many equipment -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Equipment
      </li>

      <% @lender.equipment.each do |equipment| %>
        <li class="list-group-item">
          <a href="/equipment/<%= equipment.id %>">
            <%= equipment.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/equipment/<%= equipment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/equipment/<%= equipment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_equipment/<%= equipment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_equipment" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="">
      </div>

      <!-- Label and input for lender_id -->
      <input type="hidden" name="lender_id" value="<%= @lender.id %>">

      <!-- Label and input for category -->
      <div class="form-group">
        <label for="category" class="control-label">
          Category
        </label>

        <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for time_available_start -->
      <div class="form-group">
        <label for="time_available_start" class="control-label">
          Time available start
        </label>

        <input type="text" id="time_available_start" name="time_available_start" placeholder="Time available start" class="form-control" value="">
      </div>

      <!-- Label and input for time_available_end -->
      <div class="form-group">
        <label for="time_available_end" class="control-label">
          Time available end
        </label>

        <input type="text" id="time_available_end" name="time_available_end" placeholder="Time available end" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Equipment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Lender has many loans -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Loans
      </li>

      <% @lender.loans.each do |loan| %>
        <li class="list-group-item">
          <a href="/loans/<%= loan.id %>">
            <%= loan.borrow_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/loans/<%= loan.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/loans/<%= loan.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_loan/<%= loan.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @lender.address_latitude %>,
        "lng": <%= @lender.address_longitude %>,
        "infowindow": "<h5><%= @lender.created_at %></h5><small><%= @lender.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>