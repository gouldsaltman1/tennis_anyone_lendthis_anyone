<!-- Validation failure messages -->
<% if @lender_comment.errors.any? %>
  <% @lender_comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Lender Comment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_lender_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for lender_id -->
      <div class="form-group">
        <label for="lender_id" class="control-label">
          Lender
        </label>

        <%= select_tag(:lender_id, options_from_collection_for_select(Lender.all, :id, :id, @lender_comment.lender_id), :class => "form-control") %>
      </div>

      <!-- Label and input for borrower_id -->
      <input type="hidden" name="borrower_id" value="<%= current_borrower.id %>">

      <button class="btn btn-success">
        Create Lender Comment
      </button>
      or
      <a href="/lender_comments">Cancel</a>
    </form>
  </div>
</div>
