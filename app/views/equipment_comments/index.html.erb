<div class="page-header">
  <h1>
    Equipment comments
    <a href="/equipment_comments/new" class="btn btn-lg btn-success">New Equipment comment</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "equipment_comments_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Borrower Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='borrowergteqcreated_atPicker'>
                  <%= f.text_field :borrower_created_at_gteq, :class => "form-control", :placeholder => "Borrower Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='borrowerlteqcreated_atPicker'>
                  <%= f.text_field :borrower_created_at_lteq, :class => "form-control", :placeholder => "Borrower Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#borrowergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#borrowerlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#borrowergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#borrowerlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#borrowerlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#borrowergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :user_id, "Equipment User" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :piece_of_equipment_user_id_gteq, :class => "form-control", :placeholder => "Equipment User greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :piece_of_equipment_user_id_lteq, :class => "form-control", :placeholder => "Equipment User less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/equipment_comments" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#equipment_comments_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Equipment</th>
        <th>Borrower</th>
        <th>Actions</th>
      </tr>

      <% @equipment_comments.each do |equipment_comment| %>
      <tr>
        <td>
          <% if equipment_comment.piece_of_equipment.present? %>
            <a href="/equipment/<%= equipment_comment.piece_of_equipment.id %>">
              <%= equipment_comment.piece_of_equipment.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if equipment_comment.borrower.present? %>
            <a href="/borrowers/<%= equipment_comment.borrower.id %>">
              <%= equipment_comment.borrower.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/equipment_comments/<%= equipment_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/equipment_comments/<%= equipment_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_equipment_comment/<%= equipment_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @equipment_comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
