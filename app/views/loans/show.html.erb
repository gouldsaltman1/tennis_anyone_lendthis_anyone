<div class="page-header">
  <h3>Loan #<%= @loan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Borrow</dt>
      <dd>
        <% if @loan.borrow.present? %>
          <a href="/borrowers/<%= @loan.borrow_id %>">
            <%= @loan.borrow.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Lender</dt>
      <dd><%= @loan.lender_id %></dd>

      <dt>Borrower lender equipment</dt>
      <dd><%= @loan.borrower_lender_equipment %></dd>

      <dt>Equipment</dt>
      <dd>
        <% if @loan.piece_of_equipment.present? %>
          <a href="/equipment/<%= @loan.equipment_id %>">
            <%= @loan.piece_of_equipment.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/loans" class="btn btn-primary">
        Back
      </a>
      <% if current_borrower == @loan.borrow %>
        <a href="/loans/<%= @loan.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_loan/<%= @loan.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Loan has many lender -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Lender
      </li>

      <% @loan.lender.each do |lender| %>
        <li class="list-group-item">
          <a href="/lenders/<%= lender.id %>">
            <%= lender.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/lenders/<%= lender.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/lenders/<%= lender.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_lender/<%= lender.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
